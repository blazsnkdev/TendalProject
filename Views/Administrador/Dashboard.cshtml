@{
    ViewBag.Title = "Dashboard";
}

<div class="container mt-5">
    <h1 class="text-center">Panel informativo </h1>

    <div class="row mt-4">
        <!-- Tarjeta para Categorías Activas -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-danger">
                <div class="card-header">
                    <i class="fas fa-th-list"></i> Categorías Disponibles
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.TotalCategoriasActivas</h5>
                    <p class="card-text">Total de categorías disponibles para productos.</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Proveedores Activos -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-danger">
                <div class="card-header">
                    <i class="fas fa-truck"></i> Proveedores Disponibles
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.TotalProveedoresActivos</h5>
                    <p class="card-text">Total de proveedores disponibles para los productos.</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Productos Activos -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-danger">
                <div class="card-header">
                    <i class="fas fa-box"></i> Productos Disponibles
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.TotalProductosActivos</h5>
                    <p class="card-text">Total de productos a la venta en el inventario.</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Producto Más Vendido -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-danger">
                <div class="card-header">
                    <i class="fas fa-chart-line"></i> Producto Más Vendido
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.ProductoMasVendidoNombre</h5>
                    <p class="card-text">El total de pedido que tiene este producto es: @ViewBag.ProductoMasVendidoCantidad</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Pedidos Activos -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-warning">
                <div class="card-header">
                    <i class="fas fa-shopping-cart"></i> Pedidos Actuales
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.TotalPedidosActivos</h5>
                    <p class="card-text">Total de pedidos de los clientes.</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Administradores -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-warning">
                <div class="card-header">
                    <i class="fas fa-user-shield"></i> Administradores
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.TotalAdministradores</h5>
                    <p class="card-text">Total de Administradores del sistema</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Clientes -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-warning">
                <div class="card-header">
                    <i class="fas fa-users"></i> Clientes
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.TotalClientes</h5>
                    <p class="card-text">Total de Clientes registrados</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Cliente con Más Pedidos -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-warning">
                <div class="card-header">
                    <i class="fas fa-user-check"></i> Cliente con Más Pedidos
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.ClienteConMasPedidosNombre</h5>
                    <p class="card-text">Pedidos: @ViewBag.ClienteConMasPedidosCantidad</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Pedidos Entregados -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-success">
                <div class="card-header">
                    <i class="fas fa-box-open"></i> Pedidos Entregados
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.TotalPedidosEntregados</h5>
                    <p class="card-text">Total de pedidos entregados en el sistema.</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Stock Total de Productos -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-success">
                <div class="card-header">
                    <i class="fas fa-warehouse"></i> Stock Total de Productos
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.TotalStockActivo</h5>
                    <p class="card-text">Cantidad total de stock del inventario.</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Importe Total del Día -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-success">
                <div class="card-header">
                    <i class="fas fa-money-bill-wave"></i> Importe Total del Día
                </div>
                <div class="card-body">
                    <h5 class="card-title">S/.@ViewBag.TotalImporteHoy</h5>
                    <p class="card-text">Total de ingresos por pedidos entregados hoy.</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Pedidos Entregados Hoy -->
        <div class="col-md-3">
            <div class="card custom-card mb-3 bg-gradient-success">
                <div class="card-header">
                    <i class="fas fa-calendar-check"></i> Pedidos Entregados Hoy
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.TotalPedidosHoy</h5>
                    <p class="card-text">Número de pedidos entregados del día.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Agrega Font Awesome para los íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<!-- Estilos CSS adicionales -->
<style>
    .custom-card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
    }

    .custom-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        background-color: rgba(255, 255, 255, 0.8); /* Cambia el fondo ligeramente al pasar el mouse */
    }

    .card-header i {
        margin-right: 8px;
    }

    .bg-gradient-danger {
        background: linear-gradient(45deg, #BF127B, #BF127B);
    }

    .bg-gradient-warning {
        background: linear-gradient(45deg, #ffc107, #e0a800);
    }

    .bg-gradient-success {
        background: linear-gradient(45deg, #28a745, #5cb85c);
    }

    .bg-gradient-info {
        background: linear-gradient(45deg, #17a2b8, #20c997);
    }

    .bg-gradient-secondary {
        background: linear-gradient(45deg, #6c757d, #adb5bd);
    }

    .bg-gradient-dark {
        background: linear-gradient(45deg, #343a40, #495057);
    }
    .text.center{
        font-size: 30px;
    }
</style>