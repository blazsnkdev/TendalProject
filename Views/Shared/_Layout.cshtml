<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TendalProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TendalProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: white;
            color: rgb(0, 0, 0);
            font-family: 'Arial', sans-serif;
        }

        .navbar {
            background-color: #ffd900;
            padding: 1rem;
            backdrop-filter: none;
        }

        .navbar-brand,
        .nav-link,
        .btn {
            color: #333;
        }

        .rectangle-link {
            display: inline-block;
            width: 170px; 
            height: 50px; 
            text-align: center;
            line-height: 50px; 
            background-color: #ffd900;
            color: #333;
            text-decoration: none;
            border: 2px solid transparent; 
            transition: background-color 0.3s, color 0.3s;
            margin-right: 10px; 
        }

        .rectangle-link:hover {
            background-color: #000000; 
            color: #ffffff;
        }

        .user-name {
            font-size: 1.2rem;
            color: #333;
            margin-right: 15px;
            align-self: center;
        }

        footer {
            background: rgba(0, 0, 0, 0);
            padding: 20px 0;
            text-align: center;
        }

        .navbar-right {
            display: flex;
            align-items: center;
        }

    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">

                @if (User.IsInRole("Administrador"))
                        {
                <a class="navbar-brand" asp-area="" asp-controller="Administrador" asp-action="Dashboard">
                <i class="fas fa-store"></i>  Minimarket Tendal</a>
                
                }

                @if (User.IsInRole("Cliente"))
                        {
                <a class="navbar-brand" asp-area="" asp-controller="Cliente" asp-action="ListaProductos">
                <i class="fas fa-store"></i>  Minimarket Tendal</a>
                
                }
                <div class="d-flex justify-content-between w-100">
                    <div class="d-flex align-items-center flex-grow-1" style="flex-wrap: nowrap;">
                        @if (User.IsInRole("Administrador"))
                        {
                            <a asp-controller="Usuario" asp-action="ListaUsuarios" class="rectangle-link"><i class="fas fa-users"></i> Ver Usuarios</a>
                            <a asp-controller="Categoria" asp-action="ListaCategorias" class="rectangle-link"><i class="fas fa-th-list"></i> Categorías</a>
                            <a asp-controller="Proveedor" asp-action="ListaProveedores" class="rectangle-link"><i class="fas fa-truck"></i> Proveedores</a>
                            <a asp-controller="Producto" asp-action="ListaProductos" class="rectangle-link"><i class="fas fa-box"></i> Productos</a>
                            <a asp-controller="Pedido" asp-action="ListaPedidos" class="rectangle-link"><i class="fas fa-shopping-cart"></i> Pedidos</a>
                            <a asp-controller="Pedido" asp-action="ListaPedidosEntregados" class="rectangle-link"><i class="fas fa-box-open"></i>Entregados</a>
                        }
                        @if (User.IsInRole("Cliente"))
                        {
                            <a asp-controller="Cliente" asp-action="ListaProductos" class="rectangle-link"><i class="fas fa-search"></i> Ver Productos</a>
                            <a asp-controller="Cliente" asp-action="MisPedidos" class="rectangle-link"><i class="fas fa-users"></i> Mis Pedidos</a>

                        }

                        @if (User.IsInRole("Cliente"))
                        {
                            <span class="user-name">Bienvenido Cliente, @ViewBag.NombreUsuario</span>

                            
                        }
                        @if (User.IsInRole("Administrador"))
                        {
                            <span class="user-name">Bienvenido Administrador, @ViewBag.NombreUsuario</span>
                        }
                    </div>
                    <div class="navbar-right">
                        @if (User.IsInRole("Cliente"))
                        {
                            <a asp-controller="Cliente" asp-action="Carrito" class="rectangle-link">
                                <i class="fas fa-shopping-cart"></i> Carrito
                            </a>
                        }
                        <a asp-controller="Usuario" asp-action="Logout" class="rectangle-link">
                            <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
